    "@types/multer": "^1.4.7",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.2",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "mime": "^2.5.2",
    "mongoose": "^6.0.8",
    "multer": "^1.4.3",
    "open": "^8.2.1",
    "uuid": "^8.3.2"
  },
  "private": true
}
