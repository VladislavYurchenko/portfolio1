{
  "name": "typescript-back",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "CommonJS",
  "scripts": {
    "build": "tsc",
    "start": "node .",
    "prestart": "npm run copy-files && npm run build",
    "dev": " npm run server:watch",
    "server:watch": "ts-node-dev --respawn --transpile-only src/index.ts",
